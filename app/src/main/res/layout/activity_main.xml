<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="192.168.1.146"
            android:ems="10"
            android:id="@+id/ip"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            tools:layout_editor_absoluteY="0dp" android:layout_width="0dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="Forward"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/forward"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/back"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ip"/>
    <Button
            android:text="Back"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/back"
            app:layout_constraintTop_toBottomOf="@+id/forward" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>